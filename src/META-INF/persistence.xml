<persistence
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit
			name="tpHibernate"
			transaction-type="RESOURCE_LOCAL">

		<class>com.polytech.bsm.hibernate.model.Boat</class>
		<class>com.polytech.bsm.hibernate.model.Space</class>
		<class>com.polytech.bsm.hibernate.model.Motorboat</class>
		<class>com.polytech.bsm.hibernate.model.Owner</class>
		<class>com.polytech.bsm.hibernate.model.Sailboat</class>

		<properties>

			<property	name="javax.persistence.jdbc.driver"
						value="com.mysql.cj.jdbc.Driver"/>
			<property	name="javax.persistence.jdbc.url"
						value="jdbc:mysql://localhost:3306/HibernateRendu"/>
			<property	name="javax.persistence.jdbc.user"
						value="root"/>
			<property	name="javax.persistence.jdbc.password"
						value="aqwzsx85"/>
			<property	name="hibernate.connection.pool_size"
						value="10"/>
			<property	name="hibernate.dialect"
						value="org.hibernate.dialect.MySQL5Dialect"/>
			<property	name="hibernate.show_sql"
						value="true"/>
			<property	name="hibernate.temp.use_jdbc_metadata_defaults"
						value="false"/>
			<!-- Une seule fois pour créer les tables, sinon ça va tout effacer à chaque fois -->
			<property	name="hibernate.hbm2ddl.auto"
					 	value="create" />


		</properties>

	</persistence-unit>

</persistence>
